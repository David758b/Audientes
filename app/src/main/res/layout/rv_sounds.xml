<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="horizontal"
    android:background="@drawable/rounded_corner"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginBottom="15dp"
    android:weightSum="3">

            <TextView
                android:id="@+id/rv_sound_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:text="Sound Title"
                android:textSize="22dp"
                android:gravity="center|left"
                android:fontFamily="@font/audientes_font"
                android:shadowColor="#000000"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_weight="1.95"/>

            <TextView
                android:id="@+id/rv_sound_duration"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/audientes_font"
                android:gravity="center|right"
                android:shadowColor="#000000"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
                android:text="00:00:00"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:layout_weight="0.75"/>

            <ImageView
                android:id="@+id/delete_sound"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/ic_baseline_remove_circle_24"
                android:layout_gravity="center"
                android:layout_weight="0.3"/>


    <!--todo .. skal muligvis udskiftes med et time eller nummerformat senere (kan findes i designeren under text)-->


</LinearLayout>