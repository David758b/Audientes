<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_corner"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginBottom="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.5">

        <TextView
            android:id="@+id/sound_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sound Title"
            android:textSize="22dp"
            android:fontFamily="@font/audientes_font"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_weight="1.3"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/sound_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:fontFamily="@font/audientes_font"
            android:gravity="center|right"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:text="00:00:00"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="10dp" />



    </LinearLayout>

    <TextView
        android:id="@+id/tag_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:fontFamily="@font/audientes_font"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="#SoundCategory"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp" />


    <!--todo .. skal muligvis udskiftes med et time eller nummerformat senere (kan findes i designeren under text)-->


</LinearLayout>