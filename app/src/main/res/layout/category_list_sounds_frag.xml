<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <ImageView
            android:id="@+id/returnIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
            app:tint="@color/white" />
        <EditText
            android:id="@+id/category_TV"
            android:layout_height="56dp"
            android:layout_width="wrap_content"
            android:fontFamily="@font/audientes_font"
            android:text="Category"
            android:cursorVisible="false"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="32dp"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/saveIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="SAVE"
            android:fontFamily="@font/audientes_font"
            android:gravity="center"
            android:textColor="@color/AudientesOrange"
            android:visibility="gone"
            app:tint="@color/white" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/category_sounds_RV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/category_addSound"
        android:layout_height="40dp"
        android:layout_width="325dp"
        android:src="@drawable/ic_baseline_add_24"
        android:background="@drawable/round_outline"
        android:backgroundTint="@color/AudientesOrange"
        app:tint="@color/white"
        android:layout_gravity="center" />

</LinearLayout>